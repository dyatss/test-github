<div id="popupLogin" class="popup">
    <img src="images/close.png" alt=""/>
    <div id="loginwindow">
        <form action="login.jsp" id="loginForm" method="post">
            <h3>Use your account</h3>
            <input type="text" class="input" placeholder="E-Mail" name="email" />
            <input type="password" class="input" placeholder="Password" name="password" />
            <input type="submit" class="btn1" value="Login" />
        </form>
    </div>
</div>

<div id="popupSignin" class="popup">
    <img src="images/close.png" alt=""/>
    <div id="signinwindow">
        <h3>Create a new account</h3>
        <input type="text" class="input" placeholder="Name" />
        <input type="text" class="input" placeholder="E-Mail" />
        <input type="password" class="input" placeholder="Password" />
        <input type="password" class="input" placeholder="Confirmation" />
        <input type="submit" class="btn1" value="Signin" />
    </div>
</div>